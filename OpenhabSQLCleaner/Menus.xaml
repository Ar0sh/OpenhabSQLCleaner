<Window x:Class="OpenhabSQLCleaner.Menus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenhabSQLCleaner"
        mc:Ignorable="d"
        Title="Menu" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="SkyBlue">
        <Button x:Name="btnTableMerger" Click="BtnTableMerger_Click" Content="Table Merger" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="38" Width="100"/>
        <Button x:Name="btnCleanSQLtables" Click="BtnCleanSQLtables_Click" Content="Clean SQL Tables" Margin="115,10,10,0" VerticalAlignment="Top" Height="38" Width="100"/>
        <Button x:Name="btnCheckTables" Click="BtnCheckTables_Click" Content="Check SQL Tables" Margin="0,53,0,10" VerticalAlignment="Top" Height="38" HorizontalAlignment="Center" Width="100"/>

    </Grid>
</Window>
